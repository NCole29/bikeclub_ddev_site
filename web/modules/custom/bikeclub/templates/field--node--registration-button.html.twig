{{ attach_library('bikeclub/bikeclub_styles') }}

{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
	label_display == 'inline' ? 'clearfix',
  ]
%}

{% if multiple %}
  <div{{ attributes.addClass(classes, 'field__items') }}>
    {% for item in items %}
      <div{{ item.attributes.addClass('button-width button-margin-top8 field__item') }}>
        {{ item.content }}
      </div>
    {% endfor %}
  </div>
{% else %}
  {% for item in items %}
    <div{{ attributes.addClass(classes, 'button-width button-margin-topbottom field__item') }}>
      {{ item.content }}
    </div>
  {% endfor %}
{% endif %}


