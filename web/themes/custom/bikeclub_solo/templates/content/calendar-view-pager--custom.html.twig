{#
/**
 * Override Calendar Pager template to display Month Year between pagers instead of Month.
 * Use items['current'] which is 'Current March 2024' and slice function to remove 'Current'.
 * Remove caption which help "Month year" in small font.
 * Important: `js-pager__items` class is required for Ajax.
 *
 * @see template_preprocess_calendar_view_pager()
 */
#}
{%
  set classes = [
    'pager__items',
    'js-pager__items',
    'calendar-view-pager',
  ]
%}

{% if items|length %}
  <ul {{ attributes.addClass(classes) }}>
    {% for key,item in items|without('reset') %}

      {% if item['#type'] == 'item' %}
        <li class="pager__item {{ 'pager__' ~ key|clean_class }}"><h3>{{ items['current']['#attributes']['aria-label'][8:] }}</h3></li>
      {% else %}
        <li class="pager__item {{ 'pager__' ~ key|clean_class }}">{{- item -}}</li>
      {% endif %}

    {% endfor %}
  </ul>

  {% if items.reset %}
    <div class="calendar-view-pager__reset">
      {{- items.reset -}}
    </div>
  {% endif %}
{% endif %}

